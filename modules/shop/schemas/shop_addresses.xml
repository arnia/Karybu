    <column name="lastname" type="varchar" size="45"/>
    <column name="email" type="varchar" size="45"/>
    <column name="address" type="varchar" size="255" notnull="notnull"/>
    <column name="country" type="varchar" size="45"/>
    <column name="region" type="varchar" size="45"/>
    <column name="city" type="varchar" size="45"/>
    <column name="company" type="varchar" size="100"/>
    <column name="postal_code" type="varchar" size="45"/>
    <column name="telephone" type="varchar" size="45"/>
    <column name="fax" type="varchar" size="45"/>
    <column name="default_shipping" type="char" size="1" default="N"/>
    <column name="default_billing" type="char" size="1" default="N"/>
