@charset "utf-8";
/* Log On Layout */
html,
body,
#shopAdmin,
#container,
#content{height:100%}
#body{height:90%}

h1{position:relative;float:left;margin:0;padding:0 10px 0 18px;background:#282e3f}
fieldset{border:0;margin:0;padding:0}
legend{position:absolute;width:0;height:0;overflow:hidden;visibility:hidden;font-size:0;line-height:0;z-index:-1}
input{font-family:Tahoma, Sans-serif}
#header {
    background: #282e3f;
    padding: 5px 0;
}
.logOn{
    background:#fff url(../img/bgLogOnBody.gif) 0 10px repeat-x;
    font-family: Arial, Helvetica, Sans-serif;
    margin: 0;
}
.logOn #shopAdmin{background:none}
.logOn #shopAdmin.hybrid .c{width:100%}
.logOn .logOnInterface{position:absolute;width:350px;top:15%;left:50%;margin:0 0 0 -175px}
.logOn .logOnInterface h2{margin:0 0 10px 0}
.logOn .logOnInterface form{display:none;border:1px solid #f2f2f2;background:#fcfcfc;font-size:12px}
.logOn .logOnInterface.default form#defaultLogOn,
.logOn .logOnInterface.openid form#openidLogOn{display:block}
.logOn .logOnInterface dl{margin:0;padding:30px 0 0 30px}
.logOn .logOnInterface dt{margin-bottom:3px;font-weight:bold;color:#868d95}
.logOn .logOnInterface dd{margin:0 0 19px 0}
.logOn .logOnInterface dd input{font-size:20px;font-weight:bold;padding:5px 0 0 8px;height:32px;width:279px;border:1px solid #ddd;background-image:url(../img/bgInputText.gif);background-repeat:no-repeat}
.logOn .logOnInterface dd input:focus{background-color:#fbfbfb}
.logOn .logOnInterface .btnArea{position:relative;margin:0;padding:0 30px 30px 30px;font-size:11px;zoom:1}
.logOn .logOnInterface .btnArea:after{content:"";display:block;clear:both}
.logOn .logOnInterface .keep{height:36px;padding:4px 0 0 0}
.logOn .logOnInterface .keep .iCheck{width:13px;height:13px;margin:0;vertical-align:middle}
.logOn .logOnInterface .keep label{vertical-align:middle}
.logOn .logOnInterface .keepDesc{color:#666;margin:15px 0 0 0;line-height:1.2}
.logOn .logOnInterface .btnArea .btnAction{position:absolute;top:0;right:30px}
.logOn .logOnInterface .btnArea .btnAction input{_top:-1px}
.logOn .logOnInterface .toggleID{text-decoration:none;color:#333}
.logOn .logOnInterface .attention{display:none;padding:12px 0;margin:5px 0 0 0;border:1px solid #f2f2f2;background:#f7fafc;font-size:12px;color:#ea3f22;text-align:center}
.logOn .logOnInterface .attention img{vertical-align:middle;margin-right:5px}
.logOn .logOnInterface .attention.open{display:block}
.logOn .logOnInterface .help{font-size:11px;margin:0;padding:20px 0;text-align:left;text-align:center}
.logOn .logOnInterface .help li{padding:0 0 0 9px;margin:0 4px 0 0;white-space:nowrap;display:inline;background:url(../img/vrContentNavigation.gif) no-repeat left center}
.logOn .logOnInterface .help li.first{background:none}
.logOn .logOnInterface .help li.default{display:inline}
.logOn .logOnInterface .help a{color:#555;text-decoration:none;zoom:1}
.logOn .logOnInterface .help a:hover,
.logOn .logOnInterface .help a:active,
.logOn .logOnInterface .help a:focus{text-decoration:underline}
