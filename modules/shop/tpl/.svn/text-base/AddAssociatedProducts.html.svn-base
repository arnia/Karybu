<!-- Content -->
<div id="content">
    <!-- contentHeader -->
    <div class="contentHeader postListHeader">
        <h3 class="h3">{$lang->manage_associated_products}</h3>
    </div>
    <div cond="$XE_VALIDATOR_MESSAGE" class="message {$XE_VALIDATOR_MESSAGE_TYPE}">
        <p>{$XE_VALIDATOR_MESSAGE}</p>
    </div>
    <!-- /contentHeader -->
    <form action="./" method="post">
        <input type="hidden" name="act" value="procShopToolInsertAssociatedProducts" />
        <input type="hidden" name="parent_product_srl" value="{$product->product_srl}" />


        <div class="wOption">
            <fieldset class="visualFieldset">
                <legend class="visualLabel">{$lang->select_associated_products_combination}</legend>
                <table border="1" cellspacing="0" class="tableData">
                    <tr>
                        <span>{sprintf($lang->about_adding_associated_products,$product->title,$product->sku)}</span>
                    </tr>
                    <tr>
                        <th scope="row">
                            <label for="associated_products">{$lang->select_associated_products}</label>
                        </th>
                        <td class="title">
                            <div class="fItem">
                                <ul class= "multiple_checkbox" id="associated_products">
                                <!--@if(count($values_combinations) == 0 )-->
                                {$lang->no_more_variants}
                                <!--@else-->

                                    <!--@foreach($values_combinations as $combination)-->
                                        <!--@if(count($combination) > 1)-->
                                            <li><input type="checkbox"  name="associated_combinations[]" value="{implode('_',$combination)}" />{implode('_',$combination)}</li>
                                        <!--@else-->
                                            <li><input type="checkbox"  name="associated_combinations[]" value="{$combination}" />{$combination}</li>
                                        <!--@endif-->
                                    <!--@end-->

                                <!--@end-->
                                </ul>
                                <span>{$lang->about_select_associated_products}</span>
                            </div>
                        </td>
                    </tr>

                    <tr class="last">
                        <th scope="row">
                        </th>
                        <td class="title">
                            <!--@if(count($values_combinations) != 0 )-->
                            <span class="btn"><input type="submit" value="{$lang->cmd_continue}" /></span>
                            <!--@else-->
                            <a href="{getUrl('', 'act', 'dispShopToolEditProduct', 'product_srl', $product->product_srl)}" >{$lang->cmd_back}</a>
                            <!--@end-->
                        </td>
                    </tr>
                </table>
            </fieldset>
        </div>
    </form>

</div>
<!-- /Content -->


